<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nazwa" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Data" %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label "Czas" %><br>
    <%= f.time_select :time %>
  </div>
  <div class="field">
    Kto gra:
  </div>
  <% @players.each do |player| %>
  <div class="field">
  	<%= check_box_tag "post[players_ids][]", player.id, @event.players.include?(player) %>  
    <%= label_tag(player.id, player.display_name) %></br>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Zatwierdz" %>
  </div>
  
  
  
<% end %>
